<h3 class="ui header">{{t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.caption'}}</h3>

{{#if errorMessages}}
  {{#each errorMessages as |currentError|}}
    {{ui-message
      type='error'
      closeable=true
      visible=true
      title='Error occurred'
      message=currentError
    }}
  {{/each}}
{{/if}}
<form class="ui {{state}} form flexberry-vertical-form" role="form">

  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>

  <div class="field">
    <div class="flexberry-edit-panel">
      <button type="submit" class="ui negative button" {{action 'delete'}}>
        {{t "forms.edit-form.delete-button-text"}}
      </button>
      <button type="submit" class="ui button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.statisticsSetting-caption'}}</label>
    {{flexberry-lookup
      choose='showLookupDialog'
      remove='removeLookupValue'
      value=model.statisticsSetting
      displayAttributeName='subscription.description'
      relationName='statisticsSetting'
      projection='ListView'
      title=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.statisticsSetting-caption')
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.statisticsSetting pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.since-caption'}}</label>
    {{flexberry-simpledatetime
      type="datetime"
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      value=model.since
      class=(if model.errors.since 'error' '')
    }}
    {{flexberry-validationmessage error=model.errors.since pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.to-caption'}}</label>
    {{flexberry-simpledatetime
      type="datetime"
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      value=model.to
      class=(if model.errors.to 'error' '')
    }}
    {{flexberry-validationmessage error=model.errors.to pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.statisticsInterval-caption'}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum 'new-platform-flexberry-service-bus-statistics-interval')
      value=model.statisticsInterval
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.statisticsInterval pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.sentCount
      class=(if model.errors.sentCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.sentCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.sentCount pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.receivedCount
      class=(if model.errors.receivedCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.receivedCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.receivedCount pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.errorsCount
      class=(if model.errors.errorsCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.errorsCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.errorsCount pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.uniqueErrorsCount
      class=(if model.errors.uniqueErrorsCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.uniqueErrorsCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.uniqueErrorsCount pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.connectionCount
      class=(if model.errors.connectionCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.connectionCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.connectionCount pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.queueLength
      class=(if model.errors.queueLength 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.queueLength-caption')
    }}
    {{flexberry-validationmessage error=model.errors.queueLength pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.sentAvgTime
      class=(if model.errors.sentAvgTime 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.sentAvgTime-caption')
    }}
    {{flexberry-validationmessage error=model.errors.sentAvgTime pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.queryAvgTime
      class=(if model.errors.queryAvgTime 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-record-edit-form.queryAvgTime-caption')
    }}
    {{flexberry-validationmessage error=model.errors.queryAvgTime pointing="pointing"}}
  </div>

</form>
