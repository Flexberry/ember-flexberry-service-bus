<h3 class="ui header">{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.caption'}}</h3>

{{#if errorMessages}}
  {{#each errorMessages as |currentError|}}
    {{ui-message
      type='error'
      closeable=true
      visible=true
      title='Error occurred'
      message=currentError
    }}
  {{/each}}
{{/if}}
<form class="ui form flexberry-vertical-form" role="form">

  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>

  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        <button type="submit" class="ui button save-close-button" {{action "saveAndClose"}}>
          {{t "forms.edit-form.saveAndClose-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.statisticsSetting-caption'}}</label>
    {{flexberry-lookup
      choose='showLookupDialog'
      remove='removeLookupValue'
      value=model.statisticsSetting
      displayAttributeName='subscription.description'
      relationName='statisticsSetting'
      projection='ListView'
      title=(t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.statisticsSetting-caption')
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.statisticsSetting pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.compressTo-caption'}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum 'new-platform-flexberry-service-bus-statistics-interval')
      value=model.compressTo
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.compressTo pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.statisticsAgeCount
      class=(if model.errors.statisticsAgeCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.statisticsAgeCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.statisticsAgeCount pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.statisticsAgeUnits-caption'}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum 'new-platform-flexberry-service-bus-time-unit')
      value=model.statisticsAgeUnits
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.statisticsAgeUnits pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.compressFrequencyCount
      class=(if model.errors.compressFrequencyCount 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.compressFrequencyCount-caption')
    }}
    {{flexberry-validationmessage error=model.errors.compressFrequencyCount pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.compressFrequencyUnits-caption'}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum 'new-platform-flexberry-service-bus-time-unit')
      value=model.compressFrequencyUnits
      readonly=readonly
    }}
    {{flexberry-validationmessage error=model.errors.compressFrequencyUnits pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.nextCompressTime-caption'}}</label>
    {{flexberry-simpledatetime
      type="datetime"
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      value=model.nextCompressTime
      class=(if model.errors.nextCompressTime 'error' '')
    }}
    {{flexberry-validationmessage error=model.errors.nextCompressTime pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-statistics-compression-setting-edit-form.lastCompressTime-caption'}}</label>
    {{flexberry-simpledatetime
      type="datetime"
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=true
      value=model.lastCompressTime
      class=(if model.errors.lastCompressTime 'error' '')
    }}
    {{flexberry-validationmessage error=model.errors.lastCompressTime pointing="pointing"}}
  </div>

</form>
