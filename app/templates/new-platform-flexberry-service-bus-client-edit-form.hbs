<h3 class="ui header">{{t 'forms.new-platform-flexberry-service-bus-client-edit-form.caption'}}</h3>

{{#if errorMessages}}
  {{#each errorMessages as |currentError|}}
    {{ui-message
      type='error'
      closeable=true
      visible=true
      title='Error occurred'
      message=currentError
    }}
  {{/each}}
{{/if}}
<form class="ui {{state}} form flexberry-vertical-form" role="form">

  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>

  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        <button type="submit" class="ui button save-close-button" {{action "saveAndClose"}}>
          {{t "forms.edit-form.saveAndClose-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.iD
      class=(if model.errors.iD 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-client-edit-form.iD-caption')
    }}
    {{flexberry-validationmessage error=model.errors.iD pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.name
      class=(if model.errors.name 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-client-edit-form.name-caption')
    }}
    {{flexberry-validationmessage error=model.errors.name pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.address
      class=(if model.errors.address 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-client-edit-form.address-caption')
    }}
    {{flexberry-validationmessage error=model.errors.address pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.dnsIdentity
      class=(if model.errors.dnsIdentity 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-client-edit-form.dnsIdentity-caption')
    }}
    {{flexberry-validationmessage error=model.errors.dnsIdentity pointing="pointing"}}
  </div>

  <div class="field">
    {{flexberry-field
      placeholder=(t 'components.flexberry-field.placeholder')
      readonly=readonly
      required=true
      value=model.description
      class=(if model.errors.description 'error' '')
      label=(t 'forms.new-platform-flexberry-service-bus-client-edit-form.description-caption')
    }}
    {{flexberry-validationmessage error=model.errors.description pointing="pointing"}}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-client-edit-form.subscriptions-caption'}}</label>
    {{flexberry-groupedit
      componentName="subscriptionsGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.subscriptions
      content=model.subscriptions
      readonly=readonly
      orderable=false
      class=(if model.errors.subscriptions 'error' '')
    }}
  </div>

  <div class="field">
    <label>{{t 'forms.new-platform-flexberry-service-bus-client-edit-form.sendingPermissions-caption'}}</label>
    {{flexberry-groupedit
      componentName="sendingPermissionsGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.sendingPermissions
      content=model.sendingPermissions
      readonly=readonly
      orderable=false
      class=(if model.errors.sendingPermissions 'error' '')
    }}
  </div>

</form>
